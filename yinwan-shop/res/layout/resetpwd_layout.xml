<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_bg"
    android:orientation="vertical" >

    <include layout="@layout/include_common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="30dip"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/common_single_size"
            android:background="@drawable/common_bg_single_with_top" >

            <EditText
                android:id="@+id/etCode"
                style="@style/common_single_size"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#ECE9D8" />

        <LinearLayout
            style="@style/common_single_size"
            android:background="@drawable/common_bg_single_with_middle" >

            <EditText
                android:id="@+id/etNewPWD"
                style="@style/common_single_size"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#ECE9D8" />

        <LinearLayout
            style="@style/common_single_size"
            android:background="@drawable/common_bg_single_with_bottom" >

            <EditText
                android:id="@+id/etNewPWD2"
                style="@style/common_single_size"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnGetPWDone"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:layout_marginTop="30dip"
            android:background="@drawable/edit_product_num_ok_selector"
            android:text="确  认"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>