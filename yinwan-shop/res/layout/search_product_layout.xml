<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llCommon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/search_bg_top_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="3dp" >

        <Button
            android:id="@+id/btnBack"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_title_left_selector" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@drawable/search_bg_xiaoqu"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ivProductSearch"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center|left"
                android:layout_marginLeft="8dip"
                android:background="@drawable/search_bg_xiapqu_left" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:layout_weight="1"
                android:background="@null"
                android:hint="商品名/商品条码"
                android:singleLine="true"
                android:textSize="16sp" />

            <Button
                android:id="@+id/ivDeleteSearch"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="8dip"
                android:background="@drawable/search_btn_delete_normal" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_sao_selector"
            android:visibility="gone" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvProductList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/color_app_bg"
        android:dividerHeight="0.5dp"
        android:visibility="gone" >
    </ListView>

</LinearLayout>