<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llCommon"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/search_bg_top_background"
    android:paddingTop="3dp" >

    <Button
        android:id="@+id/btnLeft"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_title_left_selector" />

    <TextView
        android:id="@+id/tvbarleft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/btnLeft"
        android:gravity="center"
        android:text=""
        android:textColor="@color/color_white"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/lllist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvTittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_white"
            
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imlistcategory"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/tvTittle"
            android:background="@drawable/listcategory"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnRight"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_title_right_selector"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</RelativeLayout>