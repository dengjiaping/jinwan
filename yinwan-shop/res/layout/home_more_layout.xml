<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_bg"
    android:orientation="vertical" >

    <include layout="@layout/include_common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rlchangeshop"
                style="@style/common_single_size"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:background="@drawable/common_bg_single_with"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/more1"
                    style="@style/common_items_style"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dip"
                    android:src="@drawable/shop" />

                <TextView
                    style="@style/common_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/more1"
                    android:layout_marginLeft="40dip"
                    android:layout_marginTop="1dp"
                    android:text="切换店铺" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dip"
                    android:layout_marginTop="3dp"
                    android:scaleType="matrix"
                    android:src="@drawable/common_bg_arrows" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlshop"
                style="@style/common_single_size"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:layout_marginTop="15dp"
                android:background="@drawable/common_bg_single_with_top"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/more2"
                    style="@style/common_items_style"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dip"
                    android:src="@drawable/aboutus" />

                <TextView
                    style="@style/common_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/more2"
                    android:layout_marginLeft="40dip"
                    android:layout_marginTop="1dp"
                    android:text="店铺资料" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dip"
                    android:layout_marginTop="3dp"
                    android:scaleType="matrix"
                    android:src="@drawable/common_bg_arrows" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:background="#ECE9D8" />

            <RelativeLayout
                android:id="@+id/rlxiaoquManage"
                style="@style/common_single_size"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:background="@drawable/common_bg_single_with_middle"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/more3"
                    style="@style/common_items_style"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dip"
                    android:src="@drawable/location" />

                <TextView
                    style="@style/common_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/more3"
                    android:layout_marginLeft="40dip"
                    android:layout_marginTop="1dp"
                    android:text="小区管理" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dip"
                    android:layout_marginTop="3dp"
                    android:scaleType="matrix"
                    android:src="@drawable/common_bg_arrows" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:background="#ECE9D8" />

            <RelativeLayout
                android:id="@+id/rlfenlei"
                style="@style/common_single_size"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:background="@drawable/common_bg_single_with_bottom"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/more4"
                    style="@style/common_items_style"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dip"
                    android:src="@drawable/insdetute" />

                <TextView
                    style="@style/common_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/more4"
                    android:layout_marginLeft="40dip"
                    android:layout_marginTop="1dp"
                    android:text="行业管理" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dip"
                    android:layout_marginTop="3dp"
                    android:scaleType="matrix"
                    android:src="@drawable/common_bg_arrows" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlintro"
                style="@style/common_single_size"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:layout_marginTop="15dp"
                android:background="@drawable/common_bg_single_with_top"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/more5"
                    style="@style/common_items_style"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dip"
                    android:src="@drawable/intro" />

                <TextView
                    style="@style/common_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/more5"
                    android:layout_marginLeft="40dip"
                    android:layout_marginTop="1dp"
                    android:text="商户版介绍" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dip"
                    android:layout_marginTop="3dp"
                    android:scaleType="matrix"
                    android:src="@drawable/common_bg_arrows" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:background="#ECE9D8" />

            <RelativeLayout
                android:id="@+id/rlhelp"
                style="@style/common_single_size"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:background="@drawable/common_bg_single_with_middle"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/more5"
                    style="@style/common_items_style"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dip"
                    android:src="@drawable/hezuo" />

                <TextView
                    style="@style/common_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/more5"
                    android:layout_marginLeft="40dip"
                    android:layout_marginTop="1dp"
                    android:text="使用帮助" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dip"
                    android:layout_marginTop="3dp"
                    android:scaleType="matrix"
                    android:src="@drawable/common_bg_arrows" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:background="#ECE9D8" />

            <RelativeLayout
                android:id="@+id/rlfeedback"
                style="@style/common_single_size"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:background="@drawable/common_bg_single_with_middle"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/more6"
                    style="@style/common_items_style"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dip"
                    android:src="@drawable/feedback" />

                <TextView
                    style="@style/common_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/more6"
                    android:layout_marginLeft="40dip"
                    android:layout_marginTop="1dp"
                    android:text="意见反馈" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dip"
                    android:layout_marginTop="3dp"
                    android:scaleType="matrix"
                    android:src="@drawable/common_bg_arrows" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:background="#ECE9D8" />

            <RelativeLayout
                android:id="@+id/rlupdate"
                style="@style/common_single_size"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:background="@drawable/common_bg_single_with_middle"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/more7"
                    style="@style/common_items_style"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dip"
                    android:src="@drawable/update" />

                <TextView
                    style="@style/common_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/more7"
                    android:layout_marginLeft="40dip"
                    android:layout_marginTop="1dp"
                    android:text="检测更新" />

                <TextView
                    android:id="@+id/tvAppVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/ivCheck"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="5dip"
                    android:text="当前版本 1.0.0"
                    android:textColor="@color/color_black"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/ivCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dip"
                    android:layout_marginTop="3dp"
                    android:scaleType="matrix"
                    android:src="@drawable/common_bg_arrows" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:background="#ECE9D8" />

            <RelativeLayout
                android:id="@+id/rlshare"
                style="@style/common_single_size"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip"
                android:background="@drawable/common_bg_single_with_bottom"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/more8"
                    style="@style/common_items_style"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dip"
                    android:src="@drawable/share" />

                <TextView
                    style="@style/common_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/more8"
                    android:layout_marginLeft="40dip"
                    android:layout_marginTop="1dp"
                    android:text="分享给我的邻居" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dip"
                    android:layout_marginTop="3dp"
                    android:scaleType="matrix"
                    android:src="@drawable/common_bg_arrows" />
            </RelativeLayout>

            <Button
                android:id="@+id/btnExitLogin"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_product_num_ok_selector"
                android:text="退出登录"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>